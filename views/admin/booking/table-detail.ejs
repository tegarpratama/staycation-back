<div class="card shadow mb-4 mt-2">
   <div class="card-header py-3">
      <a href="/admin/booking" class="btn btn-secondary">Back</a>
   </div>
   <div class="card-body">
      <div class="row">
         <div class="col-md-4">
            <img src="http://localhost:3000/<%= booking.payments.proofPayment %>" alt="image" class="img-fluid">
            <div class="row ml-1">
               <% if (booking.payments.status == 'Proses') { %>
                  <form action="/admin/booking/<%= booking.id  %>/confirmation?_method=PUT" method="POST" class="d-inline">
                     <button type="submit" class="btn btn-success btn-sm">
                        Confirmation
                        <i class="fas fa-check"></i>
                     </button>
                  </form>
                  <form action="/admin/booking/<%= booking.id  %>/reject?_method=PUT" method="POST" class="d-inline ml-2">
                     <button type="submit" class="btn btn-danger btn-sm">
                        Reject
                        <i class="fas fa-times"></i>
                     </button>
                  </form>
               <% } %>
            </div>
         </div>
         <div class="col-md-8">
            <div class="table-responsive">
               <table class="table table-bordered" id="datatableActivity" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                     <th>Name Member</th>
                     <th>Total</th>
                     <th>Bank</th>
                     <th>Title</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                        <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                        <td><%= booking.total %></td>
                        <td><%= booking.payments.bankFrom %></td>
                        <td><%= booking.itemId.title %></td>
                     </tr>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>
 